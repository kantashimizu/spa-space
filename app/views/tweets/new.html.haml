.wrapper
  = render 'header'
  .main_new
    = form_with model: @tweet, class: :form_new, local: true do |form|
      .word_new
        投 稿 す る
      = form.text_field :title, placeholder: "title", class: :title_new
      = form.radio_button :area_id,1,class: :btn_new
      東北
      = form.radio_button :area_id,2,class: :btn_new
      関東
      = form.radio_button :area_id,3,class: :btn_new
      中部
      = form.radio_button :area_id,4,class: :btn_new
      中国
      = form.radio_button :area_id,5,class: :btn_new
      九州
      = form.text_field :address, placeholder: "市町村",class: :address_new 
      .evaluation
        = form.radio_button :rate,5,id: :star1
        %label{for:"star1"}
          %span.text> 最高
          ★
        = form.radio_button :rate,4,id: :star2
        %label{for:"star2"}
          %span.text> 良い
          ★
        = form.radio_button :rate,3,id: :star3
        %label{for:"star3"}
          %span.text> 普通
          ★
        = form.radio_button :rate,2,id: :star4
        %label{for:"star4"}
          %span.text> 悪い
          ★
        = form.radio_button :rate,1,id: :star5
        %label{for:"star5"}
          %span.text> 最悪
          ★
      %label.far.fa-image
        = form.file_field :image,class: :image_new
        .comment-image
          ファイルを選択してください
      = form.text_area :text, placeholder: "text" ,class: :text_new
      = form.submit "送 信",class: :submit_new