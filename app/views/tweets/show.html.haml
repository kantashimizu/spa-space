.wrapper
  = render 'header'
  .main_show
    .main_show_tweet_back
      = form_with( local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
        = form.submit "検索", class: "search-btn"
    .show_content
      - @tweets.each do |tweet|
        .show_box
          .name_time
            .show_name
              = current_user.name
            .show_time
              = tweet.created_at.strftime('%Y/%m/%d %H:%M')
            .show_star
              - if tweet.rate ==  1
                評価 : ★
              - elsif tweet.rate ==  2
                評価 :  ★★
              - elsif tweet.rate ==  3
                評価 :  ★★★
              - elsif tweet.rate ==  4
                評価 :  ★★★★
              - elsif tweet.rate ==  5
                評価 : ★★★★★
          .area_address
            .show_area
              = tweet.area.name
            .show_address
              = tweet.address           
          .show_image
            = image_tag tweet.image.url
          .show_text
            = tweet.text
          
          

          